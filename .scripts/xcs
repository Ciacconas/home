#!/usr/bin/env bash

if [ $1 = "-a" ] || [ $1 = "--alpha" ]; then
    shift
    alpha=$1
    shift
fi

if [ ! $1 ] || [ $2 ]; then
    >&2 echo "usage: xcs [ --alpha <value> ] <value>"
    exit 1
fi

if [ $1 = ls ]; then
    cd ~/.config/Xresources
    find . -executable
    exit 0
fi

rm ~/.Xresources
cp ~/.config/Xresources/$1 ~/.Xresources

if [ $alpha ]; then
    echo *.alpha: $alpha >> ~/.Xresources
fi

xrdb ~/.Xresources 2> /dev/null
