# decrease alpha of windows
super + control + a
    alpha set -10 && dwm_status

# increase alpha of windows
super + shift + a
    alpha set +10 && dwm_status

# toggle window transparency (toggle xcompmgr)
super + a
    pidof xcompmgr && killall xcompmgr || xcompmgr &; dwm_status

# show/hide status bar
super + b
    # handled by dwm

# connect to bluetooth device (devices should be paired using bluetoothctl)
super + B
    dmenu_bluetooth

# shift focus to monitor C
super + c
    # handled by dwm

# move active window to monitor C
super + C
    # handled by dwm

# decrease number of windows in master area
super + d
    # handled by dwm

super + D

# show a list of emojis
super + e
    dmenu_emoji

super + E

# full screen (monocle) layout
super + f
    # handled by dwm

# floating layout
super + F

# greek letters menu
super + g
    dmenu_greek

super + G

# decrease master window size
super + h
    # handled by dwm

super + H

# increase number of windows in master area
super + i
    # handled by dwm

super + I

# focus on window higher on the stack
super + j
    # handled by dwm

super + J

# run passmenu
super + k
    passmenu -l 20

super + K

# increase master window size
super + l
    # handled by dwm

# lock computer
super + shift + L
    ~/.local/bin/lock_screen
    # lock_screen

# dmenu mount drive menu
super + m
    dmenu_mount mount -i

# dmenu unmount drive menu
super + M
    dmenu_mount unmount -i

# make current monitor the master monitor
super + n
    # handled by dwm

# open ~/Notes with smdv
super + N
    notes

# activate all tags to which current window belongs
super + o
    # handled by dwm

# enable all tags
super + O
    # handled by dwm

# dmenu choose screen layout
super + p
    dmenu_screenlayout -i -l 100 -p "screen layout"

# default screen layout
super + P
    default_screenlayout

# kill current window
super + q
    # handled by dwm

# quit dwm
super + Q
    # handled by dwm

# start an ipython repl
super + r
    cd ~; $TERMINAL -e ipython

super + R

# run a program
super + s
    dmenu_run -i -l 15

# start/stop a service
super + S
    dmenu_services -i

# toggle between last two layouts
super + t
    # handled by dwm

# enable default layout
super + T
    # handled by dwm

# start transmission-cli
super + u
    transmission --new-terminal

# stop transmission-cli
super + U
    transmission --stop

# shift focus to monitor V
super + v
    # handled by dwm

# move active window to monitor V
super + V
    # handled by dwm

# start default browser
super + w
    $BROWSER

# search the web
super + W
    ~/.scripts/search --dmenuargs -i

# shift focus to monitor X
super + x
    # handled by dwm

# move active window to monitor X
super + X

super + y

super + Y

# shift focus to monitor Z
super + z
    # handled by dwm

# move active window to monitor Z
super + Z
    # handled by dwm

# new terminal
super + Return
    cd ~; $TERMINAL

# new non-transparent terminal
super + shift + Return
    cd ~; $TERMINAL

# toggle pause / play
super + shift + equal
    notify-send "toggle pause / play"; browsercontrol togglepause; mpvcontrol togglepause

# raise volume
super + equal
    amixer -D pulse set Master 5%+; dwm_status

# lower volume
super + minus
    amixer -D pulse set Master 5%-; dwm_status

# toggle mute volume
super + shift + minus
    amixer -D pulse set Master 1+ toggle; dwm_status

super + shift + equal

# promote (zoom) window
super + space
    # handled by dwm

super + control + space

# toggle floating for current window
super + shift + space
    # handled by dwm

# toggle between previous tags
super + Tab
    # handled by dwm

# cycle forward through layout list
super + semicolon
    # handled by dwm

# cycle backward through layout list
super + shift + semicolon
    # handled by dwm

super + slash

super + apostrophe

super + comma

super + period

super + shift + comma

super + shift + period

# enable hidden tag
super + grave
    # handled by dwm

# apply hidden tag to focused window
super + shift + grave
    # handled by dwm

