# test if sxhkd is working
super + a
    notify-send "sxhkd" "it's working!"

super + A

# show/hide status bar
super + b
    # handled by dwm

super + B

super + c

super + C

# decrease number of windows in master area
super + d
    # handled by dwm

super + D

super + e

super + E

# enable floating layout
super + f
    # handled by dwm

# enable default layout
super + F
    # handled by dwm

# enable fibonacci dwindle layout
super + g
    # handled by dwm

# enable default layout
super + G
    # handled by dwm

# decrease master window size
super + h
    # handled by dwm

# decrease gaps between windows
super + H
    # handled by dwm

# increase number of windows in master area
super + i
    # handled by dwm

super + I

# focus on window higher on the stack
super + j
    # handled by dwm

# focus on monitor left
super + J
    # handled by dwm

# move focused window to monitor left
super + control + j
    # handled by dwm

# move focused window to monitor left and focus on monitor left
super + control + J
    # handled by dwm

# focus on window lower on the stack
super + k
    # handled by dwm

# focus on monitor right
super + K
    # handled by dwm

# move focused window to monitor right
super + control + k
    # handled by dwm

# move focused window to monitor right and focus on monitor right
super + control + K
    # handled by dwm

# increase master window size
super + l
    # handled by dwm

# increase gaps between windows
super + L
    # handled by dwm

# dmenu mount drive menu
super + m
    ~/.config/dmenu/dmenu_mount mount -i -nb "$color15" -nf "$color2" -sb "$color2" -sf "$color15" -fn monospace-14

# dmenu unmount drive menu
super + M
    ~/.config/dmenu/dmenu_mount unmount -i -nb "$color15" -nf "$color2" -sb "$color2" -sf "$color15" -fn monospace-14

# set monocle layout
super + n
    # handled by dwm

# enable default layout
super + N
    # handled by dwm

# activate tags to which current window belongs
super + o
    # handled by dwm

super + O

# dmenu choose screen layout
super + p
    ~/.config/dmenu/dmenu_screenlayout -i -l 100 -p "screen layout" -nb "$color15" -nf "$color2" -sb "$color2" -sf "$color15" -fn monospace-14

# default screen layout
super + P
    ~/.config/screenlayout/default

# kill current window
super + q
    # handled by dwm

# quit dwm
super + Q
    # handled by dwm

super + R

# run a program
super + s
    ~/.config/dmenu/dmenu_run -i -l 7 -nb "$color15" -nf "$color2" -sb "$color2" -sf "$color15" -fn monospace-14

super + S

# enable tiling layout
super + t
    # handled by dwm

# enable default layout
super + T
    # handled by dwm

super + u

super + U

super + v

super + V

# start default browser
super + w
    $BROWSER

super + W

# lock screen
super + x
    ~/.scripts/lock_screen

# lock screen and suspend
super + X
    ~/.scripts/lock_screen; systemctl suspend

super + y

super + Y

super + z

super + Z

# new terminal
super + Return
    # handled by dwm

# promote window
super + control + Return
    # handled by dwm

# new non-transparent terminal
super + shift + Return
    $TERMINAL nt

# volume louder
super + equal
    amixer -D pulse set Master 5%+; pkill -RTMIN+10 i3blocks

# volume quieter
super + minus
    amixer -D pulse set Master 5%-; pkill -RTMIN+10 i3blocks

# toggle mute volume
super + shift + minus
    amixer -D pulse set Master 1+ toggle; pkill -RTMIN+10 i3blocks

super + shift + equal

# toggle between layouts
super + space
    # handled by dwm

# toggle window floating
super + shift + space
    # handled by dwm

# toggle between previous tags
super + Tab

super + slash

super + apostrophe

super + comma

super + period

super + shift + comma

super + shift + period

