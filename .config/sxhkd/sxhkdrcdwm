# mute volume
XF86AudioMute
    amixer -D pulse set Master 1+ toggle; ~/.config/dwm/status.sh

# lower volume
XF86AudioLowerVolume
    amixer -D pulse set Master 5%-; ~/.config/dwm/status.sh

# raise volume
XF86AudioRaiseVolume
    amixer -D pulse set Master 5%+; ~/.config/dwm/status.sh

XF86AudioNext
    notify-send XF86AudioNext "not implemented"

XF86AudioPrev
    notify-send XF86AudioPrev "not implemented"

