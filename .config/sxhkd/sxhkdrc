super + F10

# decrease brightness
super + F11
    [ $(printf %.0f $(xbacklight)) -gt 19 ] && xbacklight -dec 10; dwm_status

# increase brightness
super + F12
    xbacklight -inc 10; dwm_status

# make screenshot
Print
    flameshot gui

# toggle pause / play
Pause
    notify-send "⏯"; ff-toggle-pause; mpvcontrol togglepause; timeout 1s playerctl play-pause && (icon=$(cat $HOME/.cache/dwm_playercontrol) && [ "$icon" = "" ] && echo  > $HOME/.cache/dwm_playercontrol || echo  > $HOME.cache/dwm_playercontrol); dwm_status

# sleep
super + insert
    lock_screen

# mute volume
XF86AudioMute
    amixer -D pulse set Master 1+ toggle; dwm_status

# lower volume
XF86AudioLowerVolume
    amixer -D pulse set Master 5%-; dwm_status

# raise volume
XF86AudioRaiseVolume
    amixer -D pulse set Master 5%+; dwm_status

# increase brightness
XF86MonBrightnessUp
    xbacklight -inc 10; dwm_status

# decrease brightness
XF86MonBrightnessDown
    [ $(printf %.0f $(xbacklight)) -gt 19 ] && xbacklight -dec 10; dwm_status

# next song
XF86AudioNext
    timeout 1s playerctl next; notify-send "⏭"

# previous song
XF86AudioPrev
    timeout 1s playerctl previous; notify-send "⏮"

# toggle pause / play
XF86AudioPause
    notify-send "⏯"; ff-toggle-pause; mpvcontrol togglepause; timeout 1s playerctl play-pause && (icon=$(cat $HOME/.cache/dwm_playercontrol) && [ "$icon" = "" ] && echo  > $HOME/.cache/dwm_playercontrol || echo  > $HOME.cache/dwm_playercontrol); dwm_status

# toggle pause / play
XF86AudioPlay
    notify-send "⏯"; ff-toggle-pause; mpvcontrol togglepause; timeout 1s playerctl play-pause && (icon=$(cat $HOME/.cache/dwm_playercontrol) && [ "$icon" = "" ] && echo  > $HOME/.cache/dwm_playercontrol || echo  > $HOME.cache/dwm_playercontrol); dwm_status

# toggle pause / play
XF86AudioStop
    killall ncmpcpp; killall spotifyd; killall spt; killall spotify; killall vlc; killall mpv

XF86AudioRewind
    notify-send XF86AudioForward "rewind: no mapping"

XF86AudioForward
    notify-send XF86AudioForward "forward: no mapping"

XF86AudioRecord
    notify-send XF86AudioRecord "record: no mapping"

XF86AudioMedia
    notify-send XF86AudioMedia "media: no mapping"

# search the web with duckduckgo:
XF86Search
    q=$(echo -ne "" | dmenu -p "duckduckgo:") && /usr/bin/taskset --cpu-list 3 /usr/lib/firefox/firefox --new-window "https://duckduckgo.com/?q=$q"

# search the web with google:
shift + XF86Search
    q=$(echo -ne "" | dmenu -p "google:") && /usr/bin/taskset --cpu-list 3 /usr/bin/chromium --new-window "https://google.com/search?q=$q"

# new floating ipython repl
