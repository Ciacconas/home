super + U

# shift focus to monitor V
super + v
    # handled by dwm

# move active window to monitor V
super + V
    # handled by dwm

# start firefox
super + w
    /usr/bin/taskset --cpu-list 3 /usr/lib/firefox/firefox --new-window

# start chromium
super + W
    /usr/bin/taskset --cpu-list 2 /usr/bin/chromium --new-window

# search the web with duckduckgo:
super + control + w
    q=$(echo -ne "" | dmenu -p "duckduckgo:") && /usr/bin/taskset --cpu-list 3 /usr/lib/firefox/firefox --new-window "https://duckduckgo.com/?q=$q"

# search the web with google:
super + control + W
    q=$(echo -ne "" | dmenu -p "google:") && /usr/bin/taskset --cpu-list 3 /usr/bin/chromium --new-window "https://google.com/search?q=$q"

