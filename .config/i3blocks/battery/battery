#!/bin/bash

string=$(acpi -b)
if [[ $string == *"Battery"* ]]; then
    if [[ $string == *"Discharging"* ]]; then
        percentage=$(echo $string | cut -d "," -f2 | cut -d "," -f1)
        echo ðŸ”‹$percentage
    else
      echo "ðŸ”Œ"
    fi
    show() {
        notify-send "$(acpi -b)"
    }
    case $BLOCK_BUTTON in
        1) show 
    esac
fi
