#!/bin/bash

if [[ $(systemctl is-active openvpn) == "active" ]]; then
    echo ðŸ”’
    show() {
        $HOME/.scripts/non-transparent-terminal -n topenvpn -f mono:pixelsize=18 -e $HOME/.config/i3blocks/openvpn/openvpnstatus;
