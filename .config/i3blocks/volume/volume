#!/bin/bash

sc=$($HOME/.config/i3/soundcard)
string=$(amixer -c $sc get Master)
if [[ $string == *"[on]"* ]]; then
    percentage=$(echo $(amixer -c $sc get Master) | cut -d "[" -f2 | cut -d "]" -f1)
    echo ðŸ”Š" "$percentage
else
  echo ðŸ”‡
fi

show() {
    $HOME/.config/i3/non-transparent-terminal -n tvolume -f mono:pixelsize=12 -e alsamixer;
}

case $BLOCK_BUTTON in
    1) show ;;
    3) pkill -f tvolume
esac
