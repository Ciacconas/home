# allow synctex
set synctex true
set synctex-editor-command "nvr --servername 127.0.0.1:9999 +%{line} %{input}"

# vim-like keys
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
